@model ML.Alumno
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <section>
        <h2 class="text-center">Modulo Alumnos - Materias</h2>
        <p>
            En este modulo puedes visualizar a los Alumnos así como informacion sobre sus materias registradas<br />
        </p>
    </section>
    <section>
    </section>
    <hr />

    <p>

    </p>
    <section>
        <table class="table table-danger table-striped table-bordered table-responsive-lg">
            <thead class="table-dark">
                <tr>
                    <td class="text-center" style="font-weight:bold;">Editar</td>

                    <td class="visually-hidden">IdAlumno</td>
                    <td class="text-center" style="font-weight:bold;">Nombre</td>
                    <td class="text-center" style="font-weight:bold;">ApellidoPaterno</td>
                    <td class="text-center" style="font-weight:bold;">ApellidoMaterno</td>

                    @*<td class="text-center" style="font-weight:bold;">Eliminar</td>*@
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Alumno alumno in Model.Alumnos)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-info bi bi-info-circle" href="@Url.Action("Materias","AlumnoMateria", new { IdAlumno = alumno.IdAlumno})"></a></td>
                        <td class="visually-hidden">@alumno.IdAlumno</td>
                        <td>@alumno.Nombre</td>
                        <td>@alumno.ApellidoPaterno</td>
                        <td>@alumno.ApellidoMaterno</td>

                        @*<td class="text-center"><a class="btn btn-danger bi bi-trash3" href="@Url.Action("Delete","Aseguradora", new { IdAlumno = alumno.IdAlumno })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>*@
                    </tr>
                }
            </tbody>
        </table>
    </section>


</div>